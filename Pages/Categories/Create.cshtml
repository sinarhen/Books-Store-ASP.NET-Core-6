@page
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <a asp-page="Index">Back to List</a>
</div>

<h1 class="display-4">Create</h1>

<h6 class="display-6">Category</h6>
<hr />


<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">

        <div class="form-group col-md-3">
            <label asp-for="Category.Name" class="control-label"></label>
            <input asp-for="Category.Name" class="form-control" />
            <small class="form-text text-muted"></small>
            <span asp-validation-for="Category.Name" class="text-danger"></span>

        </div>
        <div class="form-group col-md-9">
            <label asp-for="Category.Description" class="control-label"></label>
            <textarea rows="4" asp-for="Category.Description" class="form-control">

            </textarea>
            <span asp-validation-for="Category.Description" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group mt-4">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
