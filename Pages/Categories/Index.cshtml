@page
@model Categories.BooksModel
@{
}

<div class="jumbotron d-flex py-4 justify-content-between">
    <div>
        <h1 class="display-4">Categories list</h1>
        <p class="small text-black-50">Page for displaying categories</p>

    </div>
    <div class="d-flex align-items-center">
        <a asp-page="./Create" class="d-flex align-items-center gap-2 btn btn-outline-primary btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24"><path d="M24 10h-10v-10h-4v10h-10v4h10v10h4v-10h10z" /></svg>
            <span>
                Add new one

            </span>
        </a>
    </div>

</div>

<div class="container">
    @foreach (var category in Model.Categories)
    {
         <a asp-page="./Details" asp-route-id="@category.Id" class="category-section-link text-decoration-none text-black">
            <div id=@($"category-section-{category.Id}") class="category-section pb-4">
                <h2 class="display-6">@category.Name</h2>
                <p>@category.Description</p>

            </div>

        </a>
        
    }
</div>
